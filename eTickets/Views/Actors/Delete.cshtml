@model Actor
@{
	ViewData["Title"]= "Delete "+ @Model.fullName;
}

<div class="row text">
	<div class=" coll-md-8 offset-2">
		<p>
			<h1>Details for @Model.fullName</h1>
		</p>
		<div class="row">
			<div class=" coll-md-8 offset-2">
		
					
					<div class="form-group text-center">
					<img id="profilepicpre" class="border-info rounded-circle" style="height:50px; width:50px;"/>
				</div>
				<div class="form-group">
					<label asp-for="profilePictureURL" class="control-label"></label>
					<input asp-for="profilePictureURL" class="form-control" readonly/>
					<span asp-validation-for="profilePictureURL" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label asp-for="fullName" class="control-label"></label>
					<input asp-for="fullName" class="form-control" readonly/>
					<span asp-validation-for="fullName" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label asp-for="biography" class="control-label"></label>
					<input asp-for="biography" class="form-control" readonly/>
					<span asp-validation-for="biography" class="text-danger"></span>

				</div>

				<div class="form-group">
					<form asp-action="Delete">

						<input type="hidden" asp_for="@Model.Id                                  "/>
						<input type="submit" value="Confim" class="btn btn-danger float-right"/>
				
					</form>
						
					<a class="btn btn-outline-secondary" asp-action="Index" > Show All</a>	
				</div>
				
				

			</div>
		</div>
	</div>

</div>


@section Scripts{
	<script>
$(document).ready(function() {
	var output = document.getElementById('profilepicpre');
    output.src = $("#profilePictureURL").val();
})


	</script>
}
